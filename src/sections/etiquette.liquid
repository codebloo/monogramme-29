<section class="page-title">
  {%- if section.settings.about-title != blank -%}
    <h1>
        {{ section.settings.about-title }}
        <span>{{ section.settings.title }}</span>
    </h1>
  {%- endif -%}
</section>
{% for block in section.blocks %}
    {% case block.type %}
    {% when 'textimage' %}
        <section class="text-image {{ block.settings.layout }}">
            {% if block.settings.image != blank %}
            <div class="image">
                <img src="{{ block.settings.image | img_url: '353x' }}">
            </div>
            {% endif %}
            <div class="text">
                <h3>{{ block.settings.title }}</h3>
                {{ block.settings.content }}
                {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                    <a href="{{ block.settings.button_link }}">
                    {{ block.settings.button_label | escape }}
                    </a>
              {% endif %}
            </div>
        </section>
    {% when 'galleryf' %}
        <div class="gallery">
            {% if block.settings.image != blank %}
            <div class="image">
                <img src="{{ block.settings.image | img_url: '304x' }}">
                {% if block.settings.title != blank %}
                  <h3>{{ block.settings.title }}</h3>
                {% endif %}
                {% if block.settings.caption != blank %}
                  <span>{{ block.settings.caption }}</span>
                 {% endif %} 
            </div>
            {% endif %}
            {% if block.settings.image_2 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_2 | img_url: '304x' }}">
                {% if block.settings.title_2 != blank %}
                  <h3>{{ block.settings.title_2 }}</h3>
                {% endif %}
                {% if block.settings.caption_2 != blank %}
                  <span>{{ block.settings.caption_2 }}</span>
                 {% endif %} 
            </div>
            {% endif %}
            {% if block.settings.image_3 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_3 | img_url: '304x' }}">
                {% if block.settings.title_3 != blank %}
                  <h3>{{ block.settings.title_3 }}</h3>
                {% endif %}
                {% if block.settings.caption_3 != blank %}
                  <span>{{ block.settings.caption_3 }}</span>
                 {% endif %} 
            </div>
            {% endif %}
        </div>
    {% when 'title' %}
        <div class="section-title">
            <div class="wrap">
                <h3>{{ block.settings.title }}</h3>
                {{ block.settings.sub-title }}
            </div>
        </div>
    {% when 'placement' %}
    <div class="placement">
        {% if block.settings.image_1 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_1 | img_url: '170x' }}">
            </div>
        {% endif %}
        {% if block.settings.image_2 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_2 | img_url: '170x' }}">
            </div>
        {% endif %}
        {% if block.settings.image_3 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_3 | img_url: '170x' }}">
            </div>
        {% endif %}
        {% if block.settings.image_4 != blank %}
            <div class="image">
                <img src="{{ block.settings.image_4 | img_url: '170x' }}">
            </div>
        {% endif %}
        </div>
    {% when 'abbutton' %}
        <a class="btn" href="">{{ block.settings.title }}</a>   
    {% else %}
        
    {% endcase %}
{% endfor %}

